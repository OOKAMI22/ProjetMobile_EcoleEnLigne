    + Examen()
    + long getId()
    + long NbQuestion()
    + void setNbQuestion(int n)
    + void ajouterQuestion(String q,String r)
    + void supprimerQuestion(String q)

}
class Annonce{
    - long id
    - TypeAnnonce type
    - String contenu
    + Annonce(TypeAnnone t,String c)
    + long getId()
    + TypeAnnonce getType()
    + void setType(TypeAnnonce a)
    + String getContenu()
    + void setContenu(String c)
}
@enduml